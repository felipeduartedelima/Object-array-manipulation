function filterASC(a,b, attributeToSort){
  if (a[attributeToSort] > b[attributeToSort]) return 1;
  if (a[attributeToSort] < b[attributeToSort]) return -1;
  return 0;
}

function filterDESC(a,b, attributeToSort){
  if (a[attributeToSort] < b[attributeToSort]) return 1;
  if (a[attributeToSort] > b[attributeToSort]) return -1;
  return 0;
}

function separateItems(items, attribute, value, order = '', attributeToSort){
  const filtered = items.filter((item) => {if(item[attribute] === value) return true})
  const rest = items.filter((item) => {if(item[attribute] !== value) return true})

  if(order === '') return {filtered,rest}
  if(order === 'ASC') return {filtered: filtered.sort((a,b)=>filterASC(a,b, attributeToSort)),rest: rest.sort((a,b)=>filterASC(a,b, attributeToSort))}
  if(order === 'DESC') return {filtered: filtered.sort((a,b)=>filterDESC(a,b, attributeToSort)),rest: rest.sort(filterDESC(a,b, attributeToSort))}
}
