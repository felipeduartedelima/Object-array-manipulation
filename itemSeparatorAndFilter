function filterASC(a,b, attributeToSort){
  if (a[attributeToSort] > b[attributeToSort]) return 1;
  if (a[attributeToSort] < b[attributeToSort]) return -1;
  return 0;
}

function filterDESC(a,b, attributeToSort){
  if (a[attributeToSort] < b[attributeToSort]) return 1;
  if (a[attributeToSort] > b[attributeToSort]) return -1;
  return 0;
}

function itemSeparatorAndFilter(items, attribute, value, order = '', attributeToSort){
  if(order === 'ASC') arr.sort((a,b)=>filterASC(a,b, attributeToSort))
  if(order === 'DESC') arr.sort((a,b)=>filterDESC(a,b, attributeToSort))

  const filtered = items.filter((item) => {if(item[attribute] === value) return true})
  const rest = items.filter((item) => {if(item[attribute] !== value) return true})

  return {filtered,rest}
}
